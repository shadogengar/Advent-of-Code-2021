Imports System.IO
Module VBModule
    Sub Main()
        Dim FileToRead as New Streamreader("U:\Instructions.txt")
        Dim SplitFile as String = FileToRead.Split(" ")
        Dim x as Integer
        Dim y as Integer
        Dim i as Integer
        
        'Part 1
        For i = 1 to 2000
            If SplitFile(i) = "Forward" then
                x += SplitFile(i + 1)
            ElseIf SplitFile(i) = "Up"
                y -= SplitFile(i + 1)
            ElseIf SplitFile(i) = "Down"
                y += SplitFile(i + 1)
            End If
            i = i + 1
        Next
        Console.Writeline(x*y)
        Console.Readline()
    End Sub
End Module
